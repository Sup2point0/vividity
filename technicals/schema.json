{
  "version": "2.1",
  "additionalProperties": false,
  "required": [
    "shard",
    "prot",
    "text", "text-deut",
    "back", "back-deut",
    "link", "link-hover"
  ],
  "properties":
  {
    "$schema": {"type": "string"},

    "shard": {
      "description": "The internal name of the palette, in `kebab-case`.",
      "type": "string"
    },
    "name": {
      "description": "The preserved displayed name of the palette.",
      "type": "string",
      "fallback": "shard"
    },
    "desc": {
      "description": "A short displayed description for the palette.",
      "type": "string"
    },
    "duality": {
      "description": "Whether the palette is classed as light or dark.",
      "enum": ["light", "dark", null],
      "default": null
    },

    "prot": {"type": "string", "fallback": ""},
    "deut": {"type": "string", "fallback": ""},

    "focus": {"type": "string", "fallback": ""},
  
    "text": {"type": "string", "fallback": ""},
      "text-prot": {"type": "string", "fallback": ""},
      "text-deut": {"type": "string", "fallback": ""},
      "text-trit": {"type": "string", "fallback": ""},
      "text-bold": {"type": "string", "fallback": ""},
      "text-code": {"type": "string", "fallback": ""},
  
    "back": {"type": "string", "fallback": ""},
      "back-prot": {"type": "string", "fallback": ""},
      "back-deut": {"type": "string", "fallback": ""},
      "back-trit": {"type": "string", "fallback": ""},
  
    "line": {"type": "string", "fallback": ""},
      "line-prot": {"type": "string", "fallback": ""},
      "line-deut": {"type": "string", "fallback": ""},
  
    "link": {"type": "string", "fallback": ""},
      "link-visited": {"type": "string", "fallback": ""},
      "link-hover": {"type": "string", "fallback": ""},
      "link-click": {"type": "string", "fallback": ""},
  
    "card": {"type": "string", "fallback": ""},
      "card-hover": {"type": "string", "fallback": ""},
      "card-click": {"type": "string", "fallback": ""}
  }
}
